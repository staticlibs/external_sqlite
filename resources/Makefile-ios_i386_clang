export CC := ${CMAKE_C_COMPILER}
export AR := ${CMAKE_AR}
export AS := ${CMAKE_AS}
export LD := ${CMAKE_LD}
export NM := ${CMAKE_NM}
export OBJCOPY := ${CMAKE_OBJCOPY}
export OBJDUMP := ${CMAKE_OBJDUMP}
export RANLIB := ${CMAKE_RANLIB}
export STRIP := ${CMAKE_STRIP}
export CFLAGS := ${${PROJECT_NAME}_CFLAGS}

configure:
	cd sqlite && $(SH) ./configure \
	    --host=${CMAKE_HOST} \
	    --disable-shared \
	    --enable-static \
	    --disable-load-extension \
	    --disable-readline \
	    --disable-tcl \
	    ${${PROJECT_NAME}_DEBUG}
		
build:	
	cd sqlite && $(MAKE)
	mkdir -p ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}
	cp ./sqlite/.libs/libsqlite3.a ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}/libsqlite3.a
