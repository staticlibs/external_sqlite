configure:
	
build:
	@if exist sqlite_flag echo "[${CMAKE_CURRENT_BINARY_DIR}/sqlite_flag] found, skipping build"	
	@if not exist sqlite_flag pushd sqlite & nmake DEBUG=${${PROJECT_NAME}_DEBUG_WINDOWS} NO_TCL=1 /nologo -f Makefile.msc & popd
	@if not exist sqlite_flag echo f | xcopy /f /y "sqlite/libsqlite3.lib" "${CMAKE_LIBRARY_OUTPUT_DIRECTORY}/libsqlite3.lib"
	@if not exist sqlite_flag echo "flag" > sqlite_flag
